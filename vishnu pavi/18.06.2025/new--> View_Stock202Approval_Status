USE [Sap_Approval]
GO

SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO

ALTER PROCEDURE [dbo].[View_Stock202Approval_Status]
    @Doc_ID INT
AS
BEGIN
    SET NOCOUNT ON;

    -- 1. Requester Info (Document Creator)
    SELECT
        NULL AS Approver_ID,
        NULL AS Trn_Appl_His_ID,
        'Submitted' AS Status,
        'Initial level approval submitted' AS Approver_Comment,
        CU.User_Name AS Action_By,
        FORMAT(D.Created_On, 'dd-MM-yyyy') + ' - ' + FORMAT(D.Created_On, 'HH:mm:ss') AS Action_Date,
        'Requester' AS Role
    FROM Trn_Document D
    INNER JOIN Mst_User CU ON D.Created_By = CU.User_ID
    WHERE D.Doc_ID = @Doc_ID

    UNION ALL

    -- 2. Approval History (showing Approver's name and status with role level)
    SELECT 
        A.Approver_ID,
        A.Trn_Appl_His_ID,
        -- ðŸ‘‡ Append user level to status
        A.Approver_Status + ' - ' + 
            CAST(CASE 
                WHEN R.Role_Name = 'Plant Finance Head' THEN 1
                WHEN R.Role_Name = 'Plant MRPC' THEN 2
                WHEN R.Role_Name = 'Plant Head' THEN 3
                WHEN R.Role_Name = 'Corp Finance Head' THEN 4
                WHEN R.Role_Name = 'Corp MRPC' THEN 5
                ELSE 0
            END AS VARCHAR) AS Status,
        A.Approver_Comment,
        AU.User_Name AS Action_By,
        CASE 
            WHEN A.Modified_On IS NOT NULL THEN 
                FORMAT(A.Modified_On, 'dd-MM-yyyy') + ' - ' + FORMAT(A.Modified_On, 'HH:mm:ss')
            ELSE 
                FORMAT(A.Created_On, 'dd-MM-yyyy') + ' - ' + FORMAT(A.Created_On, 'HH:mm:ss')
        END AS Action_Date,
        R.Role_Name AS Role
    FROM Trn_Approval_History A
    INNER JOIN Mst_User AU ON A.Approver_ID = AU.User_ID
    LEFT JOIN Mst_Role R ON AU.Role_ID = R.Role_ID
    WHERE 
        A.Doc_ID = @Doc_ID
        AND A.Movement_ID = 3

    ORDER BY Action_Date DESC;
END;

 
