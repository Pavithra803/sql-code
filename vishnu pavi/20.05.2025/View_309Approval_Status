--view the detail from the trn approval history table
CREATE PROCEDURE View_309Approval_Status
    @Trn_Sap_ID INT,
    @Approval_Status NVARCHAR(50),
    @Comment NVARCHAR(255),
    @Modified_By INT
AS
BEGIN
    UPDATE dbo.Trn_SapTransfer_Records
    SET 
        Approval_Status = @Approval_Status,
        Remarks = @Comment,
        Modified_By = @Modified_By,
        Modified_On = GETDATE()
    WHERE Trn_Sap_ID = @Trn_Sap_ID
END
